task :default => ["web"]

Resources="provenance-java/src/test/resources/"

rule  '.dot' => '.xml' do |t|
  sh "provenance-java/target/appassembler/bin/ameeopm #{t.source}"
end

rule '.cmap' => '.dot' do |t|
  sh "fdp -Tcmap -o#{t.name} #{t.source}" 
end
rule '.jpeg' => '.dot' do |t|
  sh "fdp -Tjpeg -o#{t.name} #{t.source}" 
end


file "#{Resources}ST-50.xml" do
end
file "#{Resources}ST-50.cmap" => "#{Resources}ST-50.dot"
file "#{Resources}ST-50.jpeg" => "#{Resources}ST-50.dot"
file "#{Resources}ST-50.dot" => "#{Resources}ST-50.xml"

file "provenance-web/app/views/testmap/_ST-50.erb" => 
  ["#{Resources}ST-50.cmap"] do
  sh "cp #{Resources}ST-50.cmap provenance-web/app/views/testmap/_ST-50.erb" 
end

file "provenance-web/public/ST-50.jpeg" => ["#{Resources}ST-50.jpeg"] do
  sh "cp #{Resources}ST-50.jpeg provenance-web/public/ST-50.jpeg"
end

task :web => ["provenance-web/app/views/testmap/_ST-50.erb","provenance-web/public/images/ST-50.jpeg"]
